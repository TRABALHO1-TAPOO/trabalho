<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:diario_saude.ViewModels"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="diario_saude.Views.HomePageView"
			 x:DataType="vm:HomePageViewModel">


	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Row="0">
			<Image Source="avares://diario_saude/Assets/logo.png"
				   Width="100"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Top"/>
			<StackPanel Orientation="Vertical">
				<TextBlock Text="Visual"
					VerticalAlignment="Center"
					Margin="0 14 0 0"
					FontFamily="Segoe UI"
					FontSize="16"
					FontWeight="Bold"/>
				<TextBlock  Text="Studio"
					VerticalAlignment="Center"
					FontFamily="Segoe UI"
					FontSize="16"
					FontWeight="Bold"/>
				<TextBlock  Text="Health"
					VerticalAlignment="Center"
					FontFamily="Segoe UI"
					FontSize="16"
					FontWeight="Bold"/>
			</StackPanel>

		</StackPanel>
		<StackPanel Orientation="Horizontal"
					Grid.Row="1"
					HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<Button Margin="40"
					Padding="30"
					CornerRadius="30"
					Command="{Binding NavigateToDailyRecordCommand}">Novo Registro</Button>
			<Button Margin="40"
					Padding="30"
					CornerRadius="30"
					Command="{Binding NavigateToRecordHistoryCommand}">Hist√≥rico de Registros</Button>
		</StackPanel>
	</Grid>

</UserControl>
