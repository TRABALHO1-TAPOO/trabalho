<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:diario_saude.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="diario_saude.Views.RecordHistoryPageView"
             x:DataType="vm:RecordHistoryPageViewModel"
             x:Name="Root">



    <Grid Margin="20" RowDefinitions="Auto, Auto, *">
	<Image Source="avares://diario_saude/Assets/logo.png" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100" />
        <!-- Título -->
        <TextBlock Text="Histórico de Registros" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="Filtrar por:" VerticalAlignment="Center" />
            <ComboBox ItemsSource="{Binding FilterOptions}" SelectedItem="{Binding SelectedFilter}" Width="150" />
            <Button Content="Aplicar Filtro" Command="{Binding ApplyFilterCommand}" />
        </StackPanel>

        <!-- DataGrid -->
        <ItemsControl ItemsSource="{Binding FilteredRecords}" Grid.Row="2" Margin="0,20,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Date}" Width="100" />
                        <TextBlock Text="{Binding Mood}" Width="150" />
                        <TextBlock Text="{Binding FoodDescription}" Width="200" />
                        <TextBlock Text="{Binding FoodCalories}" Width="100" />
                        <TextBlock Text="{Binding SleepQuality}" Width="150" />
                        <TextBlock Text="{Binding Activity}" Width="200" />
                        <TextBlock Text="{Binding Duration}" Width="100" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>