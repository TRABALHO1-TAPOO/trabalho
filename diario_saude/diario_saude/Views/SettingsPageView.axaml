<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:diario_saude.ViewModels"
			 x:DataType="vm:SettingsPageViewModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="diario_saude.Views.SettingsPageView">

	<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Column="0"
				   FontFamily="Cabin"
				   FontSize="16"
				   FontWeight="Bold"
				   VerticalAlignment="Center"
				   Margin="0,0,10,0"
			   Text="{Binding ThemePreference, StringFormat='Tema ({0})'}">
		</TextBlock>

		<ToggleButton Grid.Column="1"
					  Classes="theme-switch"
					  Command="{Binding ToggleThemeCommand}"
					  VerticalAlignment="Center"/>
	</Grid>

</UserControl>
